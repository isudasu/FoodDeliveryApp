<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main6Activity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#E9E5E5"
                android:gravity="start"
                android:text="   Address"
                android:textAlignment="viewStart"
                android:textSize="18sp" />


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:hint="   Enter new address"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Business or building name"
                android:inputType="textPersonName" />



            <EditText
                android:id="@+id/etMarks"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Apt,flat or floor number"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtStreet"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Street number and more"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtArea"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Area/District"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#E9E5E5"
                android:text="   Delivery option"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#F7F2F2"
                android:text="   Meet at vehicles"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtVehicle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Add delivery note"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#F7F2F2"
                android:text="   Delivered to you"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtDelivery"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Add delivery note"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#E9E5E5"
                android:text="   Special Note"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtSpecial"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:ems="10"
                android:hint="   Add a special Note"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1AC721"
                android:text="SAVE" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/btnNext"
                android:layout_width="421dp"
                android:layout_height="match_parent"
                android:background="#1AC721"
                android:text="NEXT" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>